<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_radio_height">

        <ImageView
                android:id="@+id/mLeftImage"
                android:src="@drawable/ic_toolbar_left"
                android:layout_marginLeft="@dimen/fab_margin_left"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/mRightImage"
                android:src="@drawable/ic_main_conform"
                android:layout_marginRight="@dimen/fab_margin_left"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_marginRight="@dimen/fab_margin_left"
            android:layout_marginLeft="@dimen/fab_margin_left"
            app:layout_constraintTop_toBottomOf="@id/topView"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>