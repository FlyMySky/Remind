<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@color/background_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/itemLevel"
                android:src="@drawable/ic_add_level_unselected"
                android:padding="4dp"
                android:layout_marginRight="@dimen/fab_margin_left"
                android:layout_marginLeft="@dimen/fab_margin_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/itemRemindTime"
                android:padding="4dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/itemRemindContent"
                android:padding="4dp"
                android:layout_marginRight="@dimen/fab_margin_left"
                android:layout_marginLeft="@dimen/fab_margin_left"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
            android:background="@color/today_list_item_line_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

</LinearLayout>